{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strictFunctionTypes": true,
		"noImplicitReturns": true,
		"isolatedModules": true,
		"noImplicitReturns": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@api/*": ["src/api/*"],
			"@context/*": ["src/context/*"],
			"@hooks/*": ["src/hooks/*"],
			"@misc/*": ["src/misc/*"],
			"@types/*": ["src/types/*"],
			"@components/*": ["src/view/components/*"],
			"@layout/*": ["src/view/layout/*"],
			"@scenes/*": ["src/view/scenes/*"],
			"@public/*": ["public/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/index.tss"],
	"exclude": ["node_modules"]
}
